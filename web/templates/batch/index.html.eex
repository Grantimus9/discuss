<h2>Listing batches</h2>

<table class="table">
  <thead>
    <tr>
      <th>Csv file</th>
      <th>Job</th>
      <th>db id</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for batch <- @batches do %>
    <tr>
      <td><%= batch.csv_file_url %></td>
      <td><%= batch.job_id %></td>
      <td><%= batch.id %></td>

      <td class="text-right">
        <%= link "Show", to: batch_path(@conn, :show, batch), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: batch_path(@conn, :edit, batch), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: batch_path(@conn, :delete, batch), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New batch", to: batch_path(@conn, :new) %>
